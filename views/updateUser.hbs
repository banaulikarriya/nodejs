<div class="container">

 <div class="row">
                <div class="col-md-6">
                    <!-- Form Elements -->
                    <div class="panel panel-default">
                        <div class="panel-heading">
                            Update User
                        </div>
                        <div class="panel-body">
                            <div class="row">
                                <div class="col-md-6">
                           
                                   <form action="/update" method="post">

                                      
                                    <div class="form-group">
                                      
                                      <input type="hidden" class="form-control" id="id"  name="id" value="{{ _id }}">
                                    </div>
                                    <div class="form-group">
                                      <label for="pwd">Full Name:</label>
                                      <input type="text" class="form-control" id="name"  name="name" value="{{ userName }}">
                                    </div>
                                    <div class="form-group">
                                      <label for="email">Email:</label>
                                      <input type="email" class="form-control" id="email" name="email" value="{{ email }}" >
                                    </div>
                                    <div class="form-group">
                                      <label for="email">Contact Number:</label>
                                      <input type="number" class="form-control" id="contact" name="contact" value="{{ contact }}">
                                    </div>
                                    
                                    <button type="submit" class="btn btn-primary">Submit</button>
                                    
                                  </form>
                                </div>
                            </div>
                        </div>
                    </div>
                     <!-- End Form Elements -->
                </div>
            </div>
                <!-- /. ROW  -->
</div>